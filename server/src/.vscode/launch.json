{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "server",
            "program": "${workspaceRoot}/server.js",
            "env" : {
                "NODE_ENV" : "development"
                //"NODE_ENV" : "production"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "cli",
            "program": "${workspaceRoot}/cli/database.js",
            "args": [
                "-c", "mongodb://localhost:27017/gof",  "-p" 
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "client",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}"
        }
    ],
    "compounds": [
        { 
            "name": "debug_all",
            "configurations": ["server", "client"]
        }
    ]    
}